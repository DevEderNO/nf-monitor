{
  $schema: "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  appId: "com.sittax.nf-monitor",
  productName: "nf-monitor",

  directories: {
    output: "release/${version}",
  },

  files: [
    "dist",
    "dist-electron",
    "!node_modules/@prisma/**",
    "!node_modules/.prisma/**"
  ],

  extraResources: [
    {
      from: "node_modules/@arbs.io/asset-extractor-wasm/asset-extractor-wasm_bg.wasm",
      to: "dist-electron/asset-extractor-wasm_bg.wasm"
    },
    {
      from: "prisma",
      to: "prisma",
      filter: ["dev.db"]
    },
    {
      from: "node_modules/.prisma/client",
      to: "node_modules/.prisma/client"
    },
    {
      from: "node_modules/@prisma/client",
      to: "node_modules/@prisma/client"
    }
  ],

  publish: {
    provider: "github",
    owner: "DevEderNO",
    repo: "nf-monitor",
  },

  mac: {
    target: ["dmg"],
    artifactName: "${productName}-Mac-${version}-Installer.${ext}",
  },

  win: {
    icon: "dist/sittax.png",
    target: [{ target: "nsis", arch: ["x64"] }],
    artifactName: "${productName}-Windows-${version}-Setup.${ext}",
  },

  nsis: {
    oneClick: true,
    perMachine: true,
    installerIcon: "dist/sittax.ico",
    installerHeaderIcon: "dist/sittax.ico",
    installerLanguages: ["pt_BR"],
    deleteAppDataOnUninstall: true,
  },

  linux: {
    target: ["AppImage"],
    artifactName: "${productName}-Linux-${version}.${ext}",
  },
}

